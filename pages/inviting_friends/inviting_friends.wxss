/* pages/inviting_friends/inviting_friends.wxss */
page {
  background: #fafafa;
}
.page {
  text-align: center;
  padding: 0 30rpx;
}
.page .ewm {
  margin: 60rpx 0 40rpx;
  width: 360rpx;
  height: 360rpx;
}
.page .title {
  font-size: 34rpx;
  color: #333;
}
.page .text {
  font-size: 30rpx;
  color: #666;
  margin: 20rpx 0;
}
.page .share-box {
  border: 1px solid #ccc;
  border-radius: 15rpx;
  background: #fff;
  padding: 40rpx 0;
  margin-top: 40rpx;
}
.page .share-icons {
  margin: 30rpx 0;
}
.page .share-icons image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin: 0 20rpx;
}

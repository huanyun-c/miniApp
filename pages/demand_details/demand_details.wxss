/* pages/demand_details/demand_details.wxss */
.page{
  background: #fafafa;
}
.top{
  background: #fff;
}
.top-head{
  display: flex;
  border-bottom:1px solid #e1e1e1;
}
.top-head .top-pic{
  margin:20rpx;
  width:82rpx;
  height:82rpx;
  border-radius: 50%;
  vertical-align: middle;
}
.top-head .top-name{
  margin-top: 18rpx;
}
.top-head .top-name text{
  color: #333;
  font-size:34rpx;
}
.top-head .top-name view{
  color: #999;
  font-size:28rpx;
}
.top-body{
  padding: 10rpx 0 10rpx 125rpx;
}
.top-body view{
  padding: 10rpx 0;
  font-size:32rpx;
  color:#999;
}
.top-body view text{margin-right:20rpx;color: #333}

.guanzhu{
  margin-top:20rpx;
  padding:20rpx 0 20rpx 20rpx;
  background: #fff;
  font-size:0;
}
.guanzhu image{
  width:80rpx;
  height:80rpx;
  margin-right:20rpx;
  border-radius: 50%;
}

.cantain{
  margin-top:20rpx;
  background:#fff;
  padding-left:20rpx;
  padding-right:20rpx;
}
.cantain-head{
  border-bottom:1px solid #e1e1e1;
  display: flex;
}
.cantain-head image{
  width: 80rpx;
  height:80rpx;
  margin: 20rpx 0;
  border-radius: 50%;
}
.cantain-head .head-name{
  margin-top: 20rpx;
  margin-left:20rpx;
  font-size:30rpx;
}
.cantain-head .head-name .head-address{
  color: #999; 
}
.cantain-head .head-name .head-address image{
  width: 20rpx;
  height:26rpx;
  margin:0;
}
.cantain-body{
  padding:10rpx 0;
}
.cantain-body view{
  padding:10rpx 0;
  color:#999;
  font-size:32rpx;
}
.cantain-body view text{
  color: #333;
  margin-right:20rpx;
  width:180rpx;
  display: inline-block;
}
.cantain-body view textarea{
  display: inline-block;
  width:480rpx;
  height:200rpx;
  vertical-align: top;
  border:1px solid #ccc;
  border-radius: 10rpx;
  padding:10rpx;
  box-sizing: border-box;
}

.cantain-foot{
  border-top:1px solid #e1e1e1;
}
.cantain-foot .item{
  padding: 20rpx 0;
}
.cantain-foot .item .left-pic{
  width: 80rpx;
  height:80rpx;
  border-radius: 50%;
  margin: 20rpx 20rpx 20rpx 0;
}
.cantain-foot .item .right-box{
  display: inline-block;
  width:600rpx;
  vertical-align: top;
  padding-top: 15rpx;
}
.cantain-foot .item .right-box .item-time{
  color: #999;
  font-size:28rpx;
}
.cantain-foot .item .right-box .item-info{
  margin: 15rpx 0;
  font-size: 32rpx;
}
.cantain-foot .item .right-box .myd{
  color: #999;
  font-size: 32rpx;
}
.cantain-foot .item .right-box .myd image{
  width:29rpx;
  height:28rpx;
  margin:0 5rpx;
}

.more-evaluate{
  border-top:1px solid #e1e1e1;
  padding: 20rpx;
  text-align: center;
  background: #fff;
  font-size:32rpx;
}
.btns{
  margin-top:20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 0;
  background: #fff;
}
.btns .btn{
  padding: 0 60rpx;
  height: 76rpx;
  line-height: 76rpx;
  border-radius: 38rpx;
  color:#fff;
  margin:0 25rpx;
  font-size:32rpx;
}
.btns .btn:first-child{
  background: #ff6e95;
}
.btns .btn:last-child{
  background: #6e8eff;
}
.btns .btn.default{
  background: #ccc;
}
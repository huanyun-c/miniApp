/* pages/service_evaluation/service_evaluation.wxss */
page{
    background: #fafafa;
}
.page .part{
    background: #fff;
    padding:30rpx;
    margin-bottom: 20rpx;
}
.page .part .title{
    margin-bottom: 20rpx;
}
.page .part textarea {
    width: 100%;
    border: 1px solid #e1e1e1;
    border-radius: 15rpx;
    padding: 10rpx;
    color: #666;
    box-sizing: border-box;
  }
  .page .part textarea + text {
    color: #999;
    text-align: right;
    display: block;
    margin-top: -60rpx;
    margin-right: 20rpx;
  }
  .part-flex{
      display: flex;
  }
  .part-flex view{
      flex:1;
  }
  .part-flex view:last-child{
      text-align: right;
  }
  .part-flex image{
      width: 29rpx;
      height:28rpx;
      margin: 0 8rpx;
  }

  .btns{
    margin-top:20rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 20rpx 0;
    background: #fff;
    position: fixed;
    bottom:0;
    width:100%;
  }
  .btns .btn{
    padding: 0 30rpx;
    height: 76rpx;
    line-height:76rpx;
    border-radius:10rpx;
    color:#fff;
    margin:0 15rpx;
    display: block;
    width:100%;
    text-align: center;
    font-size:32rpx;
  }

  .btns .btn:last-child{
    background: #6e8eff;
  }
  .btns .btn.default{
    background: #ccc;
  }